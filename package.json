{
  "name": "envmanager",
  "version": "0.0.0",
  "description": "EnvManager is a user-friendly application that allows you to create, edit, and manage your environment variables in a simple and efficient way.",
  "author": {
    "name": "Heitor Bisneto",
    "email": "heitor.bardemaker@live.com"
  },
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --publish=never",
    "build:dir": "electron-builder --dir",
    "build:win": "electron-builder --win --dir",
    "build:mac": "electron-builder --mac --dir",
    "build:linux": "electron-builder --linux --dir",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "dependencies": {
    "electron-updater": "^6.7.3"
  },
  "build": {
    "appId": "com.bisneto.envmanager",
    "productName": "EnvManager",
    "icon": "icon.png",
    "directories": {
      "output": "dist"
    },
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64", "universal"]
        },
        {
          "target": "zip",
          "arch": ["x64", "arm64", "universal"]
        }
      ],
      "icon": "assets/icon.icns"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "assets/icon.ico"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "assets/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "publish": [
      {
        "provider": "github",
        "owner": "hbisneto",
        "repo": "EnvManagerElectron",
        "private": false,
        "releaseType": "release"
      }
    ],
    "files": [
      "**/*",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/*.d.ts",
      "!**/node_modules/.bin",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "renderer/**/*"
    ]
  },
  "keywords": [], 
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "electron": "^32.3.3",
    "electron-builder": "^25.0.5",
    "electron-updater": "^6.7.3"
  }
}
